        "watch": "tsc --watch",
        "postversion": "node scripts/update-version.js && git add index.ts && git commit --amend --no-edit"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "1.10.1",
        "node-html-markdown": "^1.3.0"
    },
    "devDependencies": {
        "@types/node": "^22.14.1",
        "shx": "^0.4.0",
        "typescript": "^5.8.3"
    }
